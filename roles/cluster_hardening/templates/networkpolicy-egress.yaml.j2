apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: default-deny-egress
  namespace: {{ project.name }}
spec:
  podSelector: {}
  policyTypes:
    - Egress
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-egress-dns
  namespace: {{ project.name }}
spec:
  podSelector: {}
  policyTypes:
    - Egress
  egress:
    - to:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: kube-system
          podSelector:
            matchLabels:
              k8s-app: kube-dns
      ports:
        - protocol: UDP
          port: 53
        - protocol: TCP
          port: 53
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-egress-cluster
  namespace: {{ project.name }}
spec:
  podSelector: {}
  policyTypes:
    - Egress
  egress:
    - to:
        - ipBlock:
            cidr: {{ cluster_pod_cidr }}
        - ipBlock:
            cidr: {{ cluster_service_cidr }}
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-egress-kubernetes-api
  namespace: {{ project.name }}
spec:
  podSelector: {}
  policyTypes:
    - Egress
  egress:
    - to:
        - ipBlock:
            cidr: {{ host_public_ip }}/32
      ports:
        - protocol: TCP
          port: {{ k3s_api_port }}
---
{% if cluster_hardening_allow_internet_https %}
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-egress-internet-https
  namespace: {{ project.name }}
spec:
  podSelector: {}
  policyTypes:
    - Egress
  egress:
    - to:
        - ipBlock:
            cidr: 0.0.0.0/0
            except:
              - {{ cluster_pod_cidr }}
              - {{ cluster_service_cidr }}
      ports:
        - protocol: TCP
          port: 443
{% endif %}
{% if project.network_policy is defined and project.network_policy.egress is defined and project.network_policy.egress | length > 0 %}
---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-egress-extra
  namespace: {{ project.name }}
spec:
  podSelector: {}
  policyTypes:
    - Egress
  egress:
{% for rule in project.network_policy.egress %}
    - to:
        - ipBlock:
            cidr: {{ rule.cidr }}
{% if rule.except is defined and rule.except | length > 0 %}
            except:
{% for block in rule.except %}
              - {{ block }}
{% endfor %}
{% endif %}
      ports:
{% for port_rule in rule.ports %}
        - protocol: {{ port_rule.protocol | default('TCP') }}
          port: {{ port_rule.port }}
{% endfor %}
{% endfor %}
{% endif %}
